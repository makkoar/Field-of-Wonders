<Window x:Class="Field_of_Wonders.Views.LanguageSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Field_of_Wonders.Views"
        xmlns:models="clr-namespace:Field_of_Wonders.Models"
        mc:Ignorable="d"
        Title="Выбор языка / Language Selection" Height="150" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Name="LabelSelect" Content="Выберите язык / Select language:" FontWeight="Bold"/>

        <ComboBox Grid.Row="1" Name="LanguageComboBox" VerticalAlignment="Center" Margin="0,5,0,10">
            <ComboBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:LanguageInfo}">
                    <TextBlock Text="{Binding DisplayName}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Grid.Row="2" Name="OkButton" Content="OK" IsDefault="True" Width="75" HorizontalAlignment="Right" Click="OkButton_Click"/>

    </Grid>
</Window>